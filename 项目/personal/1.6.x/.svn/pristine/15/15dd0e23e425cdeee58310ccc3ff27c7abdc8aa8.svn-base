package org.opoo.apps.module;


/**
 * 模块配置器接口。
 * 
 * @author Alex Lin(alex@opoo.org)
 * @since 1.5
 */
public interface ModuleConfigurator
{
	/**
	 * 配置模块。
	 * 
	 * @param context 模块上下文
	 */
    void configure(ConfigurationContext context);

    /**
     * 销毁模块。
     * 
     * @param context 模块上下文
     */
    void destroy(ConfigurationContext context);
}
